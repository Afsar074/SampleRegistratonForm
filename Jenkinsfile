pipeline{
    agent any
    stages{
        stage('Init'){
            steps{
                    echo "This is initialising the project" 
                    }
                    }
        stage('Build'){
            steps {
                echo "this step to build the project"
            }
        }
        stage('Deploy'){
            steps{
                echo "we are deploying application in staging area"
            }
        }
        stage('Deploying to Production'){
            steps{
                echo "we are deploying app to the production"
            }
     
        }
    }
}